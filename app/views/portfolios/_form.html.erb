<%= form_for(@portfolio_item) do |form| %>
  
  <% if @portfolio_item.errors.any? %>
      <% @portfolio_item.errors.full_messages.each do |message| %>
        <%= alert_generator message %>
      <% end %>
  <% end %>


  <div class='row'>
    <div class='col-md-6'>
      <div class="form-group">
        <%= form.label :title %>
        <%= form.text_field :title, class: 'form-control' %>
      </div>
      
      <div class="form-group">
        <%= form.label :subtitle %>
        <%= form.text_field :subtitle, class: 'form-control' %>
      </div>
      
      <div class="form-group">
        <label class='btn btn-primary'>
          Upload a main image file<%= form.file_field :main_image, style: 'display:none;' %>
        </label>
      </div>
      
      <div class="form-group">
        <label class='btn btn-primary'>
          Upload a thumb image file<%= form.file_field :thumb_image, style: 'display:none;' %>
        </label>
      </div>
      
    </div>
    
    
    <div class='col-md-6'>
       <div class="form-group">
          <%= form.label :body %>
          <%= form.text_area :body, class: 'form-control', rows: '10' %>
        </div>
    </div>
    
    
    <hr>
  
    
     <div class='col-md-12'>
        <h2>Technologies Used:</h2>
  
        <div>
          <%= form.fields_for :technologies do |technology_form| %>
            <% render 'technology_fields', f: technology_form %>
          <% end %>
          
          <div>
            <%= link_to_add_association 'Add Technology', form, :technologies %>
          </div>
        </div>
      
        <br>
        <br>
      
        <div class="form-group">
          <%= form.submit 'Save Portfilo Item', class: 'btn btn-primary btn-block' %>
        </div>
       
    </div>
  </div>
<% end %>